{
  "extends": [
    "config:js-lib",
    ":rebaseStalePrs",
    ":automergeAll",
    ":label(internal)",
    ":masterIssue"
  ],
  "includePaths": [
    "generators/app/templates/_package.json",
    "package.json"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "depTypeList": ["dependencies"],
      "rangeStrategy": "bump"
    }
  ],
  "prCreation": "not-pending",
  "stabilityDays": 3
}
