{
  "extends": [
    "config:js-lib",
    ":rebaseStalePrs",
    ":automergeAll",
    ":label(internal)",
    ":enableVulnerabilityAlerts"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "depTypeList": [
        "dependencies"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": [
        "yeoman-test"
      ],
      "allowedVersions": "< 7.0.0"
    },
    {
      "matchPackageNames": [
        "mem-fs"
      ],
      "allowedVersions": "< 3.0.0"
    }
  ],
  "stabilityDays": 3
}